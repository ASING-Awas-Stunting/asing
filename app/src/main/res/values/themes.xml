<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Capstone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/white</item>
        <!-- Font Family. -->
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="GreenTextWhiteBackgroundButton">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="textLight">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="textBold">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>

    <style name="textButton">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

</resources>

